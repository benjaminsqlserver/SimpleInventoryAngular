{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Product",
                              "component": "ProductID",
                              "name": "ProductIDLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getProductsForProductIDResult}",
                              "textProperty": "ProductName",
                              "valueProperty": "ProductID",
                              "placeholder": "Choose Product",
                              "count": "${getProductsForProductIDCount}",
                              "pageSize": "${getProductsForProductIDPageSize}",
                              "type": "dropdown-datagrid",
                              "name": "ProductID",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "events": {
                                "loadData": [
                                  {
                                    "name": "ConData.getProducts",
                                    "parameters": [
                                      {
                                        "name": "$top",
                                        "value": "${event.top}"
                                      },
                                      {
                                        "name": "$skip",
                                        "value": "${event.skip}"
                                      },
                                      {
                                        "name": "$orderby",
                                        "value": "${event.orderby}"
                                      },
                                      {
                                        "name": "$filter",
                                        "value": "${event.filter}"
                                      },
                                      {
                                        "name": "$count",
                                        "value": "true"
                                      }
                                    ],
                                    "then": [
                                      {
                                        "name": "getProductsForProductIDResult",
                                        "type": "set",
                                        "value": "${result.value}"
                                      },
                                      {
                                        "name": "getProductsForProductIDCount",
                                        "type": "set",
                                        "value": "result['@odata.count']"
                                      }
                                    ],
                                    "type": "invoke"
                                  }
                                ]
                              },
                              "emptyText": "No records to display.",
                              "searchText": "Search..."
                            },
                            {
                              "type": "required-validator",
                              "name": "ProductIDRequiredValidator",
                              "component": "ProductID",
                              "text": "ProductID is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Quantity",
                              "component": "Quantity",
                              "name": "QuantityLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "type": "numeric",
                              "name": "Quantity",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              }
                            },
                            {
                              "type": "required-validator",
                              "name": "QuantityRequiredValidator",
                              "component": "Quantity",
                              "text": "Quantity is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Transaction Date",
                              "component": "TransactionDate",
                              "name": "TransactionDateLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "type": "datepicker",
                              "name": "TransactionDate",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Transaction Type",
                              "component": "TransactionType",
                              "name": "TransactionTypeLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "maxLength": 20,
                              "type": "textbox",
                              "name": "TransactionType",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              }
                            },
                            {
                              "type": "required-validator",
                              "name": "TransactionTypeRequiredValidator",
                              "component": "TransactionType",
                              "text": "TransactionType is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "back"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new InventoryTransaction!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "ConData.createInventoryTransaction",
                        "parameters": [
                          {
                            "name": "InventoryTransaction",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "type": "back"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "getProductsForProductIDPageSize",
        "type": "set",
        "value": "10"
      },
      {
        "name": "ConData.getProducts",
        "parameters": [
          {
            "name": "$top",
            "value": "${getProductsForProductIDPageSize}"
          },
          {
            "name": "$skip",
            "value": "0"
          },
          {
            "name": "$count",
            "value": "true"
          }
        ],
        "then": [
          {
            "name": "getProductsForProductIDResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getProductsForProductIDCount",
            "type": "set",
            "value": "result['@odata.count']"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Add Inventory Transaction",
  "layout": "Main",
  "access": [
    "Authenticated"
  ]
}