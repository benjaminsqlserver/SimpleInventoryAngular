{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Product Name",
                              "component": "ProductName",
                              "name": "ProductNameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "maxLength": 100,
                              "type": "textbox",
                              "name": "ProductName",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              }
                            },
                            {
                              "type": "required-validator",
                              "name": "ProductNameRequiredValidator",
                              "component": "ProductName",
                              "text": "ProductName is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Supplier",
                              "component": "SupplierID",
                              "name": "SupplierIDLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getSuppliersForSupplierIDResult}",
                              "textProperty": "SupplierName",
                              "valueProperty": "SupplierID",
                              "placeholder": "Choose Supplier",
                              "count": "${getSuppliersForSupplierIDCount}",
                              "pageSize": "${getSuppliersForSupplierIDPageSize}",
                              "type": "dropdown-datagrid",
                              "name": "SupplierID",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "events": {
                                "loadData": [
                                  {
                                    "name": "ConData.getSuppliers",
                                    "parameters": [
                                      {
                                        "name": "$top",
                                        "value": "${event.top}"
                                      },
                                      {
                                        "name": "$skip",
                                        "value": "${event.skip}"
                                      },
                                      {
                                        "name": "$orderby",
                                        "value": "${event.orderby}"
                                      },
                                      {
                                        "name": "$filter",
                                        "value": "${event.filter}"
                                      },
                                      {
                                        "name": "$count",
                                        "value": "true"
                                      }
                                    ],
                                    "then": [
                                      {
                                        "name": "getSuppliersForSupplierIDResult",
                                        "type": "set",
                                        "value": "${result.value}"
                                      },
                                      {
                                        "name": "getSuppliersForSupplierIDCount",
                                        "type": "set",
                                        "value": "result['@odata.count']"
                                      }
                                    ],
                                    "type": "invoke"
                                  }
                                ]
                              },
                              "emptyText": "No records to display.",
                              "searchText": "Search..."
                            },
                            {
                              "type": "required-validator",
                              "name": "SupplierIDRequiredValidator",
                              "component": "SupplierID",
                              "text": "SupplierID is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Category",
                              "component": "CategoryID",
                              "name": "CategoryIDLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getCategoriesForCategoryIDResult}",
                              "textProperty": "CategoryName",
                              "valueProperty": "CategoryID",
                              "placeholder": "Choose Category",
                              "count": "${getCategoriesForCategoryIDCount}",
                              "pageSize": "${getCategoriesForCategoryIDPageSize}",
                              "type": "dropdown-datagrid",
                              "name": "CategoryID",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "events": {
                                "loadData": [
                                  {
                                    "name": "ConData.getCategories",
                                    "parameters": [
                                      {
                                        "name": "$top",
                                        "value": "${event.top}"
                                      },
                                      {
                                        "name": "$skip",
                                        "value": "${event.skip}"
                                      },
                                      {
                                        "name": "$orderby",
                                        "value": "${event.orderby}"
                                      },
                                      {
                                        "name": "$filter",
                                        "value": "${event.filter}"
                                      },
                                      {
                                        "name": "$count",
                                        "value": "true"
                                      }
                                    ],
                                    "then": [
                                      {
                                        "name": "getCategoriesForCategoryIDResult",
                                        "type": "set",
                                        "value": "${result.value}"
                                      },
                                      {
                                        "name": "getCategoriesForCategoryIDCount",
                                        "type": "set",
                                        "value": "result['@odata.count']"
                                      }
                                    ],
                                    "type": "invoke"
                                  }
                                ]
                              },
                              "emptyText": "No records to display.",
                              "searchText": "Search..."
                            },
                            {
                              "type": "required-validator",
                              "name": "CategoryIDRequiredValidator",
                              "component": "CategoryID",
                              "text": "CategoryID is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Quantity Per Unit",
                              "component": "QuantityPerUnit",
                              "name": "QuantityPerUnitLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "QuantityPerUnit",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Unit Price",
                              "component": "UnitPrice",
                              "name": "UnitPriceLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "type": "numeric",
                              "name": "UnitPrice",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Units In Stock",
                              "component": "UnitsInStock",
                              "name": "UnitsInStockLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "type": "numeric",
                              "name": "UnitsInStock",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Units On Order",
                              "component": "UnitsOnOrder",
                              "name": "UnitsOnOrderLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "type": "numeric",
                              "name": "UnitsOnOrder",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Reorder Level",
                              "component": "ReorderLevel",
                              "name": "ReorderLevelLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "type": "numeric",
                              "name": "ReorderLevel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Discontinued",
                              "component": "Discontinued",
                              "name": "DiscontinuedLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "type": "checkbox",
                              "name": "Discontinued",
                              "triState": true
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "back"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new Product!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "ConData.createProduct",
                        "parameters": [
                          {
                            "name": "Product",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "type": "back"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "getSuppliersForSupplierIDPageSize",
        "type": "set",
        "value": "10"
      },
      {
        "name": "ConData.getSuppliers",
        "parameters": [
          {
            "name": "$top",
            "value": "${getSuppliersForSupplierIDPageSize}"
          },
          {
            "name": "$skip",
            "value": "0"
          },
          {
            "name": "$count",
            "value": "true"
          }
        ],
        "then": [
          {
            "name": "getSuppliersForSupplierIDResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getSuppliersForSupplierIDCount",
            "type": "set",
            "value": "result['@odata.count']"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "getCategoriesForCategoryIDPageSize",
        "type": "set",
        "value": "10"
      },
      {
        "name": "ConData.getCategories",
        "parameters": [
          {
            "name": "$top",
            "value": "${getCategoriesForCategoryIDPageSize}"
          },
          {
            "name": "$skip",
            "value": "0"
          },
          {
            "name": "$count",
            "value": "true"
          }
        ],
        "then": [
          {
            "name": "getCategoriesForCategoryIDResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getCategoriesForCategoryIDCount",
            "type": "set",
            "value": "result['@odata.count']"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Add Product",
  "layout": "Main",
  "access": [
    "SuperAdmin"
  ]
}